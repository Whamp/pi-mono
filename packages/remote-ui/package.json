{
	"name": "@mariozechner/pi-remote-ui",
	"version": "0.30.2",
	"description": "Remote UI interface for Pi coding agent",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/server/index.ts",
		"build": "npm run build:client && npm run build:server",
		"build:client": "vite build",
		"build:server": "tsc -p tsconfig.server.json",
		"start": "node dist/server/index.js",
		"check": "tsc --noEmit"
	},
	"dependencies": {
		"@mariozechner/pi-coding-agent": "0.30.2",
		"@mariozechner/pi-web-ui": "0.30.2",
		"@mariozechner/pi-ai": "0.30.2",
		"@mariozechner/pi-agent-core": "0.30.2",
		"@mariozechner/mini-lit": "^0.2.0",
		"lit": "^3.3.1",
		"express": "^4.18.2",
		"ws": "^8.16.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^20.11.16",
		"@types/react": "^18.2.55",
		"@types/react-dom": "^18.2.19",
		"@types/ws": "^8.5.10",
		"typescript": "^5.3.3",
		"tsx": "^4.7.0",
		"vite": "^5.0.12"
	}
}
