{
  "name": "@mariozechner/droid",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx --watch server/src/index.ts",
    "dev:client": "npm run dev --prefix client",
    "build": "npm run build --prefix client && tsc -p server/tsconfig.json",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@mariozechner/pi-coding-agent": "*",
    "@mariozechner/pi-agent-core": "*",
    "@mariozechner/pi-ai": "*",
    "express": "^4.19.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.12",
    "concurrently": "^9.2.1",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  }
}
